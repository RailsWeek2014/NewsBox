<style>
.field_with_errors {
	background-color: red;
}

img{
	margin:10px; 
	float: left;
	width: 80px;
	heigt: 80px;
	border: 2px solid;
}

ul{
	float: left; 
	margin:10px;
	list-style-type:none;
}

li{
	background-color:green; 
	width:600px;
	margin: 10px;
}

#floatstop{
	clear: both;	
}
