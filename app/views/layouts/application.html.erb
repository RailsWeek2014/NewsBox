<!DOCTYPE html>
<html>
<head>
  <title>NewsBox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
		<% if flash[:alert] %>
			<p id="alert">
			<%= flash[:alert] %>
			</p>	
		<% end %>
		<% if flash[:alert] %>
			<p id="alert">
				<%= flash[:alert] %>
			</p>
		<% end %>

		<div id="header">
			<h1>RSS Newsbox</h1>
		</div>

		<div id="main">
			<%= yield %>
		</div>
</body>
</html>
